<!-- Tech Stack Section -->
<section id="tech" class="pt-20 overflow-hidden">
    <div class="px-6">
        <!-- Title -->
        <div class="mb-16">
            <h2 class="text-3xl font-bold mb-4 dark:text-white">
                Tech Stack - Tools I Use Everyday
            </h2>
        </div>

        <div class="container mx-auto overflow-hidden py-12 scroll-container">
            <!-- Wrapper yang bergerak -->
            <div class="flex scroll-wrapper">
                <!-- Set pertama - 8 cards -->
                <div class="flex gap-6 px-3">
                    <!-- Card 1 - JavaScript -->
                    {{#each techStack}}

                    <div
                        class="flex flex-col items-center justify-center p-4 rounded-xl hover:shadow-md transition min-w-[140px]">
                        <div class="p-3 rounded-lg dark:bg-gray-800 mb-3 bg-white">
                            <img src="{{this.image}}" loading="lazy" alt="JavaScript" class="w-10 h-10" />
                        </div>
                        <span class="text-sm font-medium dark:text-gray-400">{{this.title}}</span>
                    </div>
                    {{/each}}


                </div>

                <!-- Set kedua - Duplikat 8 cards untuk infinite scroll seamless -->
                <div class="flex gap-6 px-3">
                    {{#each techStack}}

                    <div
                        class="flex flex-col items-center justify-center p-4 rounded-xl hover:shadow-md transition min-w-[140px]">
                        <div class="p-3 rounded-lg dark:bg-gray-800 mb-3 bg-white">
                            <img src="{{this.image}}" loading="lazy" alt="JavaScript" class="w-10 h-10" />
                        </div>
                        <span class="text-sm font-medium dark:text-gray-400">{{this.title}}</span>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>